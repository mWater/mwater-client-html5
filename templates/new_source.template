<div class="page">
    <label class="control-label">Source Type</label>
    <select id="source_type">
        <option value=""></option>
        {#sourceTypes}
        <option value="{.}">{#loc field="sources.source_type" value=./}</option>
        {/sourceTypes}
    </select>
    <div id="set_location" class="checkbox checked">
        Set to current location
    </div>
    <div>
        <input id="name" type="text" placeholder="Optional name" />
    </div>
    <div>
        <input id="desc" type="text" placeholder="Optional description" />
    </div>
    <div>
        <button id="create_button" type="button" class="btn btn-primary margined"> Create </button>
        &nbsp;
        <button id="cancel_button" type="button" class="btn margined"> Cancel </button>
    </div>
</div>